#include<iostream>
#include<fstream>
using namespace std;
class Student
{
 int rollno;
 int marks[3];
 char name;
  public:
  Student():rollno(0),name(" ")
{
    marks[0]=marks[1]=marks[2]=0;}

Student(int r,char n,int m1,int m2,int m3)
{
    if(m1<0 ||m2<0||m3<0||m1>100||m2>100||m3>100)
    {
        throw invalid argument("Marks must be between 0 and 100");
    }
}

rollno=r;
name=n;
marks[0]=m1;
marks[1]=m2;
marks[3]=m3;


 void display()
 {
    cout<<"Enter the roll call of the students: \n";
    cin>>rollno;
    cout<<"Enter the name of the student \n";
    cin>>name;
    cout<<"Enter the marks of 3 subject 1 \n";
    cin>>marks;
 }
 void accept()
 {
       cout<<"the roll no of the student is:"<<endl;
       cout<<"the name of the student is:"<<endl;
       cout<<"The marks scored in 3 subjects are:"<<endl;
 }
};

class Gradebook{
Student students[100];
int count;
};
